<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- MaterialSearchView-->
    <!--TODO: Configurar layout Material Search View-->
    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/colorPrimary</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_search_back_branco</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_search_close_icon</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">#FFFFFF</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Hint for edit text -->
        <item name="android:hint">Pesquise aqui</item>

    </style>

</resources>
